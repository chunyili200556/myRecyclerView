<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/member_magazine_cover"
        android:layout_width="151dp"
        android:layout_height="210dp"
        android:src="@drawable/magazine"
        android:layout_centerHorizontal="true"
        fresco:placeholderImage="@drawable/magazine"/>

    <TextView
        android:id="@+id/member_periods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="643æœŸ"
        android:layout_below="@+id/member_magazine_cover"
        android:layout_alignLeft="@+id/member_magazine_cover"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/member_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-03-14"
        android:layout_below="@+id/member_magazine_cover"
        android:layout_alignEnd="@+id/member_magazine_cover"
        android:layout_alignRight="@+id/member_magazine_cover"
        android:layout_alignTop="@+id/member_periods"
        android:textSize="16dp"
        android:textColor="#000"/>

</RelativeLayout>